FROM node:20-alpine

WORKDIR /app

ARG NEXT_PUBLIC_BASE_PATH=/treinos
ARG NEXT_PUBLIC_API_URL=/treinos
ENV NEXT_PUBLIC_BASE_PATH=${NEXT_PUBLIC_BASE_PATH}
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}

COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build

EXPOSE 3000

CMD ["npm", "run", "start"]
